<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/frm_profile_thumbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/img_profile_thumbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/tv_profile_thumbs_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_profile_thumbs"
            android:layout_alignLeft="@id/img_profile_thumbs"
            android:layout_alignRight="@id/img_profile_thumbs"
            android:gravity="right"
            android:textColor="@color/white" />
    </RelativeLayout>

    <com.google.ads.AdView
        android:id="@+id/adViewDetailProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        ads:loadAdOnCreate="true" >
    </com.google.ads.AdView>

    <TextView
        android:id="@+id/tv_profile_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adViewDetailProfile"
        android:background="@color/notes"
        android:gravity="right"
        android:text="@string/credit_fifa"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_profile_credit"
        android:layout_below="@id/frm_profile_thumbs" >

        <TextView
            android:id="@+id/tv_profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

</RelativeLayout>
