<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <TextView
        android:id="@+id/item_tv_schedule_group_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/blue_less"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/item_tv_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_group_title"
        android:layout_centerHorizontal="true"
        android:text="time" />

    <TextView
        android:id="@+id/item_tv_schedule_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time"
        android:layout_centerHorizontal="true"
        android:text="0-0" />

    <ImageView
        android:id="@+id/item_img_schedule_team_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_tv_schedule_time"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_algeria" />

    <TextView
        android:id="@+id/item_tv_schedule_team_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time"
        android:layout_toLeftOf="@id/item_tv_schedule_result"
        android:layout_toRightOf="@id/item_img_schedule_team_1"
        android:ellipsize="marquee"
        android:maxLines="2" />

    <ImageView
        android:id="@+id/item_img_schedule_team_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_tv_schedule_time"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_uruguay" />

    <TextView
        android:id="@+id/item_tv_schedule_team_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time"
        android:layout_toLeftOf="@id/item_img_schedule_team_2"
        android:layout_toRightOf="@id/item_tv_schedule_result"
        android:ellipsize="marquee"
        android:maxLines="2" />

</RelativeLayout>