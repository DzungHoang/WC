<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/lod.wc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7aac1a"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_home_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/home_logo" />

    <RelativeLayout
        android:id="@+id/frm_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_home_logo" >

        <LinearLayout
            android:id="@+id/lnr_countdown_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_countdown_day_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/count_down_days"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_countdown_hour_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/count_down_hours"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_countdown_minutes_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/count_down_minutes"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_countdown_second_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/count_down_seconds"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lnr_countdown_title"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/img_countdown_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/countdown_red" />

                <lod.wc.entity.AutofitTextView
                    android:id="@+id/tv_countdown_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_countdown_red"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    app:minTextSize="12sp"
                    app:sizeToFit="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/img_countdown_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/countdown_blue" />

                <lod.wc.entity.AutofitTextView
                    android:id="@+id/tv_countdown_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_countdown_blue"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    app:minTextSize="12sp"
                    app:sizeToFit="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/img_countdown_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/countdown_orange" />

                <lod.wc.entity.AutofitTextView
                    android:id="@+id/tv_countdown_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_countdown_orange"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    app:minTextSize="12sp"
                    app:sizeToFit="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/img_countdown_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/countdown_green" />

                <lod.wc.entity.AutofitTextView
                    android:id="@+id/tv_countdown_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/img_countdown_green"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    app:minTextSize="12sp"
                    app:sizeToFit="true" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <com.google.ads.AdView
        android:id="@+id/adView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        ads:adSize="BANNER"
        ads:adUnitId="@string/admob_id"
        ads:loadAdOnCreate="true" >
    </com.google.ads.AdView>

    <RelativeLayout
        android:id="@+id/frm_home_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/adView"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <Button
            android:id="@+id/btn_home_team"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_menu_green" />

        <ImageView
            android:id="@+id/img_home_team_favorite"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_home_team"
            android:layout_alignTop="@id/btn_home_team"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/icon_flag_no" />

        <lod.wc.entity.AutofitTextView
            android:id="@+id/tv_home_team_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/img_home_team_favorite"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:minTextSize="8sp"
            app:sizeToFit="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frm_home_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/frm_home_team"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <Button
            android:id="@+id/btn_home_group"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_menu_blue" />

        <ImageView
            android:id="@+id/img_home_group"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_home_group"
            android:layout_alignTop="@id/btn_home_group"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/img_btn_group" />

        <lod.wc.entity.AutofitTextView
            android:id="@+id/tv_home_team_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/img_home_group"
            android:singleLine="true"
            android:text="@string/btn_group"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:minTextSize="8sp"
            app:sizeToFit="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frm_home_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/frm_home_group"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <Button
            android:id="@+id/btn_home_fixture"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_menu_blue" />

        <ImageView
            android:id="@+id/img_home_fixture"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_home_fixture"
            android:layout_alignTop="@id/btn_home_fixture"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:src="@drawable/img_btn_schedule" />

        <lod.wc.entity.AutofitTextView
            android:id="@+id/tv_home_team_fixture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/img_home_fixture"
            android:singleLine="true"
            android:text="@string/btn_schedule"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:minTextSize="8sp"
            app:sizeToFit="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frm_list_match"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/frm_home_schedule"
        android:layout_below="@id/img_home_logo" >

        <ListView
            android:id="@+id/lv_home_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:scrollingCache="false" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>