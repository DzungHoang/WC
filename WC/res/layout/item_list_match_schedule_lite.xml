<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/item_tv_schedule_time_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="time" />

    <TextView
        android:id="@+id/item_tv_schedule_result_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time_lite"
        android:layout_centerHorizontal="true"
        android:text="0-0" />

    <TextView
        android:id="@+id/item_tv_schedule_result_pen_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_result_lite"
        android:layout_centerHorizontal="true"
        android:text="0-0" />

    <TextView
        android:id="@+id/item_tv_schedule_team_1_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time_lite"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/item_tv_schedule_result_lite"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/item_img_schedule_team_1_lite"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/item_tv_schedule_time_lite"
        android:layout_toLeftOf="@id/item_tv_schedule_team_1_lite"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_algeria" />

    <TextView
        android:id="@+id/item_tv_schedule_team_2_lite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_schedule_time_lite"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/item_tv_schedule_result_lite"
        android:maxLines="1" />

    <ImageView
        android:id="@+id/item_img_schedule_team_2_lite"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/item_tv_schedule_time_lite"
        android:layout_toRightOf="@id/item_tv_schedule_team_2_lite"
        android:scaleType="fitCenter"
        android:src="@drawable/flag_uruguay" />

</RelativeLayout>