<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lod.entertainment.wc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="WCApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="lod.entertainment.wc.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lod.entertainment.wc.TeamFavoriteSelectActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="lod.entertainment.wc.GroupActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="lod.entertainment.wc.ScheduleActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="lod.entertainment.wc.TeamDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <service android:name=".data.UpdateDataService"></service>
        <receiver android:name=".receiver.MatchdayNotificationReceiver">
            <intent-filter >
                <action android:name="android.intent.action.DATE_CHANGED"/>
                <action android:name="lod.entertainment.wc.TEST_ACTION"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>